<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!--android:state_checked="true"-->
        <layer-list>

            <item>
                <shape android:shape="rectangle">

                    <solid android:color="@color/displayText" />
                </shape>
            </item>


            <item android:bottom="0.8dp" android:left="0.8dp" android:right="0.8dp" android:top="0.8dp">
                <shape android:shape="rectangle">
                    <gradient android:angle="-135" android:endColor="#202020" android:startColor="#000000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/displayText" />
                </shape>
            </item>



            <item android:bottom="0.8dp" android:left="0.8dp" android:right="0.8dp" android:top="0.8dp">
                <shape android:shape="rectangle">
                    <gradient android:angle="-135" android:endColor="#202020" android:startColor="#000000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">

            <!--<corners android:radius="5dp" />-->
            <stroke android:width="1dp" android:color="#171c20" />
            <solid android:color="#050e13" />

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">

            <!--<corners android:radius="5dp" />-->
            <stroke android:width="1dp" android:color="#222222" />
            <solid android:color="@null" />

        </shape>
    </item>

    <item>
        <layer-list>

            <item android:left="1dp" android:top="1dp">
                <shape>
                    <!--<corners android:radius="5dp" />-->
                    <solid android:color="#303030" />
                </shape>
            </item>

            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <!--<corners android:radius="5dp" />-->
                    <solid android:color="#808080" />
                </shape>
            </item>

            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <!--<corners android:radius="5dp" />-->
                    <gradient android:angle="-45" android:centerColor="#202020" android:endColor="#404040" android:startColor="#000000" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>