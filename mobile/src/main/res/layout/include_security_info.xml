    <TextView
        android:id="@+id/tvSecurity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Security"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorTextPrimary"
        app:fontFamily="sans-serif-light"
        android:textSize="@dimen/small_icon_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/ibSecurity"
        app:layout_constraintStart_toEndOf="@+id/ibSecurity"
        app:layout_constraintTop_toTopOf="@+id/ibSecurity" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSecurity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="horizontal"
        android:fadeScrollbars="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSecurity" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorDividerLine"
        app:layout_constraintBottom_toBottomOf="@+id/tvSecurity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSecurity"
        app:layout_constraintTop_toTopOf="@+id/tvSecurity" />

