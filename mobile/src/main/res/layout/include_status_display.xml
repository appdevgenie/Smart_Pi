<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/display_background">

    <ImageView
        android:id="@+id/ivStatusOnline"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/led_green" />

    <TextView
        android:id="@+id/tvStatusOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/ivStatusOnline"
        app:layout_constraintStart_toEndOf="@+id/ivStatusOnline"
        app:layout_constraintTop_toTopOf="@+id/ivStatusOnline"
        android:text="Online" />

    <ImageView
        android:id="@+id/ivStatusSecure"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStatusOnline"
        app:srcCompat="@drawable/led_red" />

    <TextView
        android:id="@+id/tvStatusSecure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/ivStatusSecure"
        app:layout_constraintStart_toEndOf="@+id/ivStatusSecure"
        app:layout_constraintTop_toTopOf="@+id/ivStatusSecure"
        android:text="Not secure" />

    <ImageView
        android:id="@+id/ivStatusPower"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/led_green" />

    <TextView
        android:id="@+id/tvStatusPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Power"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/ivStatusPower"
        app:layout_constraintEnd_toStartOf="@+id/ivStatusPower"
        app:layout_constraintTop_toTopOf="@+id/ivStatusPower" />

    <ImageView
        android:id="@+id/ivStatusArmed"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivStatusSecure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivStatusSecure"
        app:srcCompat="@drawable/led_off" />

    <TextView
        android:id="@+id/tvStatusArmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Not armed"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/ivStatusArmed"
        app:layout_constraintEnd_toStartOf="@+id/ivStatusArmed"
        app:layout_constraintTop_toTopOf="@+id/ivStatusArmed" />

</androidx.constraintlayout.widget.ConstraintLayout>